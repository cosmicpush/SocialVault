{
  "name": "bharatiyanews",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "clean": "rimraf .next out node_modules",
    "fresh-install": "npm run clean && npm install",
    "fresh-start": "npm run fresh-install && npm run dev",
    "backup": "./scripts/backup-db.sh",
    "restore": "./scripts/restore-db.sh",
    "check-db": "node scripts/check-db.js",
    "debug-user": "node scripts/debug-user.js",
    "setup": "npm install && npx prisma generate && npx prisma db push",
    "reset-db": "rm -f database/dev.db && npx prisma db push",
    "maintenance:start": "pm2 stop bharatiyanews && npm run backup",
    "maintenance:end": "npm run build && pm2 restart bharatiyanews",
    "prod:setup": "bash -c 'mkdir -p database && chmod 755 database && npm run setup && npm run build'",
    "prod:start": "pm2 start ecosystem.config.js --env production",
    "prod:stop": "pm2 stop bharatiyanews",
    "prod:restart": "pm2 restart bharatiyanews",
    "prod:reload": "npm run backup && git pull && npm install && npm run build && pm2 reload bharatiyanews"
  },
  "dependencies": {
    "@codemirror/basic-setup": "^0.20.0",
    "@codemirror/commands": "^6.8.0",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.3",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-markdown": "^6.3.2",
    "@codemirror/lang-python": "^6.1.7",
    "@codemirror/lang-sql": "^6.8.0",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/language": "^6.10.8",
    "@codemirror/lint": "^6.8.4",
    "@codemirror/search": "^6.5.10",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.36.4",
    "@prisma/client": "^6.12.0",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@tailwindcss/forms": "^0.5.9",
    "autoprefixer": "^10",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "codemirror": "^6.0.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.4.7",
    "lucide-react": "^0.479.0",
    "next": "^14.2.23",
    "nodemailer": "^6.10.0",
    "otplib": "^12.0.1",
    "postcss": "^8",
    "qrcode": "^1.5.4",
    "react": "^18",
    "react-dom": "^18",
    "react-error-boundary": "^5.0.0",
    "react-google-recaptcha": "^3.1.0",
    "react-icons": "^4.12.0",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.20",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^4",
    "prettier": "^3.1.0",
    "prisma": "^6.12.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.7.2"
  }
}
